<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="fr.loria.orpailleur.revisor.platform.PU" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/revisor-db</jta-data-source>
		<class>fr.loria.orpailleur.revisor.webplatform.entity.Group</class>
		<class>fr.loria.orpailleur.revisor.webplatform.entity.User</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/revisor-db" />
			<property name="javax.persistence.jdbc.user" value="revisor" />
			<property name="javax.persistence.jdbc.password" value="revisor" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
		</properties>
	</persistence-unit>
</persistence>